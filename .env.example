# NextAuth Configuration
NEXTAUTH_URL=http://localhost:8933
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth (optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional - for social login)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (custom API endpoint)
# Your custom email API endpoint URL (POST request)
EMAIL_API_URL=https://your-email-service.com/api/send
# Optional API key for authentication (sent as Bearer token)
EMAIL_API_KEY=your-api-key-here
# The "from" address for emails
EMAIL_FROM=noreply@yourdomain.com

# Database Path (optional - defaults to ./db/exammer.db)
DATABASE_PATH=./db/exammer.db
